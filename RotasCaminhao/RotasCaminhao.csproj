<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <!-- Habilita a análise de código durante a compilação -->
    <AnalysisMode>AllEnabledByDefault</AnalysisMode>
  </PropertyGroup>

  <ItemGroup>
    <!-- Adicione referências aos pacotes de analisadores Roslyn que deseja usar -->
    <!-- Por exemplo, os analisadores de estilo de código FxCop -->
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="7.0.0" PrivateAssets="all" />
    <!-- Você pode adicionar mais pacotes de analisadores aqui conforme necessário -->
  </ItemGroup>

  <!-- Configure as regras específicas dos analisadores em um arquivo .editorconfig, se necessário -->

</Project>
